{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": {
    "backend": {
      "directory": "backend",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "port": 8000,
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT"
    },
    "frontend": {
      "directory": "frontend",
      "healthcheckPath": "/",
      "healthcheckTimeout": 300,
      "port": 3000,
      "startCommand": "npm start"
    }
  }
}